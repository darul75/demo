              a(href="#" class="dropdown-toggle" data-toggle="dropdown") Select match here
                b.caret                    
              ul.dropdown-menu(role="menu")
                li(ng-repeat="m in matchs")
                  a(href="#", ng-click="match(m)") {{m.id}}
  
    //- MAIN
    div.container-fluid
      div.row
        div.col-sm-3.col-md-2.sidebar
          ul.nav.nav-sidebar
